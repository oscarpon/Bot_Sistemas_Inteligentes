<!-- Regla 16 -->
<category>
<pattern> Cuenta hasta <set>number</set> </pattern>
<template>
	<think>
		<set var="cont">1</set>
		<set var="out">1</set>
	</think>
	<condition var="cont">
		<li><value><star/></value><get var="out"/></li>
		<li>
			<think>
			<set var="cont">
				<map name="successor"><get var="cont"/></map>
			</set>
			<set var="out"><get var="out"/>, <get var="cont"/></set>
			</think>
			<loop/>
		</li>
	</condition>
</template>
</category>

