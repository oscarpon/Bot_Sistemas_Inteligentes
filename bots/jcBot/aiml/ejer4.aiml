		<li> <srai> PELO <star index="3"/> </srai> </li>
	</condition>
</template>
</category>

<!-- Regla 3 Pelo -->
<category>
<pattern> ^ color * pelo * </pattern>
<template> 
	<srai>PELO <star index="3"/></srai>
</template>
</category>


